{
  "coc.preferences.floatActions": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "c",
    "cpp",
    "typescript",
    "typescriptreact",
    "javascript",
    "javascriptreact",
    "json",
    "html",
    "markdown",
    "ruby",
    "python",
    "rust",
    "cmake"
  ],
  "prettier.printWidth": 80,
  "prettier.proseWrap": "always",
  "prettier.formatterPriority": 1,
  "prettier.singleQuote": true,
  "python.analysis.diagnosticMode":"openFilesOnly",
  // "html.autoClosingTags": false,
  "diagnostic.enable": true,
  "solargraph.hover": true,
  "solargraph.diagnostics": true,
  "diagnostic.displayByAle": false,
  "diagnostic.errorSign": "✖",
  "diagnostic.warningSign": "⚠",
  "diagnostic.infoSign": "●",
  "diagnostic.hintSign": "○",
  "diagnostic.showUnused": true,
  // "clangd.path": "/usr/bin/clangd",
  "languageserver": {
    "sorbet": {
      "command": "srb",
      "args": ["tc", "--typed", "true", "--enable-all-experimental-lsp-features", "--lsp", "--disable-watchman", "--dir", "."],
      "filetypes": ["ruby"],
      "rootPatterns": ["sorbet/config"],
      "initializationOptions": {},
      "settings": {}
    },
  "ccls": {
    "command": "ccls",
    "filetypes": ["c", "cc", "cpp", "c++" ],
    "rootPatterns": [".ccls", "compile_commands.json", ".git/"],
    "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    }
  }
}
