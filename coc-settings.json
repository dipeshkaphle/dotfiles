{
  "coc.preferences.floatActions": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "c",
    "cpp",
    "typescript",
    "typescriptreact",
    "javascript",
    "javascriptreact",
    "json",
    "html",
    "markdown",
    "ruby",
    "python",
    "rust",
    "cmake",
    "haskell"
  ],
  "prettier.printWidth": 80,
  "prettier.proseWrap": "always",
  "prettier.formatterPriority": 1,
  "prettier.singleQuote": true,
  "python.analysis.diagnosticMode": "openFilesOnly",
  // "html.autoClosingTags": false,
  "diagnostic.enable": true,
  "solargraph.hover": true,
  "solargraph.diagnostics": true,
  "diagnostic.displayByAle": false,
  "diagnostic.errorSign": "✖",
  "diagnostic.warningSign": "⚠",
  "diagnostic.infoSign": "●",
  "diagnostic.hintSign": "○",
  "diagnostic.showUnused": true,
  "rust-analyzer.lens.run": true,
  "rust-analyzer.lens.enable": true,
  // "clangd.path": "/usr/bin/clangd",
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cc", "cpp", "c++"],
      "rootPatterns": [".ccls", "compile_commands.json", ".git/"],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    },
  //   "haskell": {
  //     "command": "~/.local/bin/haskell-language-server-wrapper",
  //     "args": ["--lsp"],
  //     "rootPatterns": [
  //       "*.cabal",
  //       "stack.yaml",
  //       "cabal.project",
  //       "package.yaml",
  //       "hie.yaml"
  //     ],
  //     // "rootPatterns": ["*.cabal", "stack.yaml", "cabal.project"],
  //     "filetypes": ["haskell", "lhaskell"]
  //   }
  // },
  "codeLens.enable": true,
  // "codeLens.separator": "‣"
  "codeLens.separator": ""
}
